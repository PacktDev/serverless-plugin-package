{
  "compilerOptions": {
    "lib": ["es2017"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
